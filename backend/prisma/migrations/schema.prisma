

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Booking {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  reference          String   @unique
  name               String
  email              String   @unique
  ticketsCount       Int      @default(1)
  qrCode             String?
  status             String   @default("pending")
  verificationCode   String?
  isVerified         Boolean  @default(false)
  seatNumber         String?
  eventName          String   @default("Rupaayi Fest")
  eventLocation      String   @default("Gitam University BLR")
  venue              String   @default("Auditorium")
  createdAt          DateTime @default(now())
  eventDate          DateTime?
  students           Student[]
}

model Student {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  bookingId          String
  booking            Booking  @relation(fields: [bookingId], references: [id])
  seatNumber         String
  name               String
  registrationNumber String
  gitamEmail         String
  createdAt          DateTime @default(now())
}
